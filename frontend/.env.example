# Environment Configuration for UK Commission Admin Panel
# 2025 Modern Standards

# Application
VITE_APP_TITLE=UK Commission Admin Panel
VITE_APP_VERSION=2.2.0
VITE_APP_DESCRIPTION=Professional Government Theme Frontend

# API Configuration
VITE_API_URL=http://localhost:8000
VITE_API_VERSION=v1
VITE_API_TIMEOUT=10000

# Features Flags (2025 Modern Approach)
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ML_FEATURES=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true

# Performance & Optimization
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_CODE_SPLITTING=true
VITE_ENABLE_LAZY_LOADING=true
VITE_BUNDLE_ANALYZER=false

# Security
VITE_ENABLE_HTTPS=false
VITE_ENABLE_CSRF_PROTECTION=true

# Development
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_HOT_RELOAD=true
VITE_SHOW_PERFORMANCE_METRICS=true

# Logging & Monitoring
VITE_LOG_LEVEL=info
VITE_ENABLE_SENTRY=false
VITE_SENTRY_DSN=

# UI/UX
VITE_DEFAULT_THEME=professional-navy
VITE_DEFAULT_LANGUAGE=en
VITE_ANIMATION_DURATION=200

# Cache Configuration
VITE_CACHE_DURATION=300000
VITE_ENABLE_BROWSER_CACHE=true
